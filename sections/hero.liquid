{{ 'section-hero.css' | asset_url | stylesheet_tag }}

<div class="header-container">
  <h1>
    <img src="{{ 'hero-image.svg' |  asset_url }}" alt="">
    <span>vintage & thrift</span>
  </h1>

  <div class="hero-collections">
    <div class="hero-collections__card-container">
      {%- for block in section.blocks -%}
        <a href="{{ block.settings.collection.url }}" class="hero-collections__card">
          <div
            class="hero-collections__card--bg"
            style="background-image: url({{ block.settings.image_bg |  image_url }});"
          ></div>
          <div
            class="hero-collections__card--hover"
            style="background-image: url({{ block.settings.image_hover |  image_url  }});"
          ></div>

          <h3 class="hero-collections__card--title">{{ block.settings.collection.title | downcase }}</h3>
        </a>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero",
  "blocks": [
    {
      "type": "collection",
      "limit": 3,
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "image_bg",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "image_hover",
          "label": "Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
